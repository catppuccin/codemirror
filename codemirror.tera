---
whiskers:
  version: "2.3.0"
  matrix:
    - flavor
  filename: "themes/{{ flavor.identifier }}.css"
---

{%- set prefix = ".cm-s-ctp-" ~   flavor.identifier -%}

div{{ prefix }}.CodeMirror {
  --bg0: #{{ base.hex }};
  --bg1: #{{ overlay1.hex }};
  --bg4: #{{ overlay0.hex }};
  --fg: #{{ text.hex }};
  --fg3: #{{ subtext0.hex }};
  --gray: #{{ subtext1.hex }};
  --blue: #{{ blue.hex }};
  --yellow: #{{ yellow.hex }};
  --aqua: #{{ blue.hex }};
  --orange: #{{ peach.hex }};
  --primary-bg: #{{ base.hex }};
  --current-line: #{{ surface0.hex }};
  --selection: #{{ surface2.hex }};
  --atom: #{{ lavender.hex }};
  --cursor: #{{ overlay1.hex }};
  --keyword: #{{ red.hex }};
  --operator: #{{ sky.hex }};
  --number: #{{ peach.hex}};
  --definition: #{{ blue.hex }};
  --string: #{{ green.hex }};
}

{{ prefix }}.CodeMirror,
{{ prefix }} .CodeMirror-gutters {
  background-color: var(--primary-bg);
  color: var(--fg3);
}
{{ prefix }} .CodeMirror-gutters {
  background: var(--primary-bg);
  border-right: 0px;
}
{{ prefix }} .CodeMirror-linenumber {
  color: var(--bg4);
}
{{ prefix }} .CodeMirror-cursor {
  border-left: 1px solid var(--fg);
}
{{ prefix }}.cm-fat-cursor .CodeMirror-cursor {
  background-color: var(--cursor) !important;
}
{{ prefix }} .cm-animate-fat-cursor {
  background-color: var(--cursor) !important;
}
{{ prefix }} div.CodeMirror-selected {
  background: var(--selection);
}
{{ prefix }} span.cm-meta {
  color: var(--blue);
}
{{ prefix }} span.cm-comment {
  color: var(--gray);
}
{{ prefix }} span.cm-number {
  color: var(--number);
}
{{ prefix }} span.cm-atom {
  color: var(--atom);
}
{{ prefix }} span.cm-keyword {
  color: var(--keyword);
}
{{ prefix }} span.cm-variable {
  color: var(--fg);
}
{{ prefix }} span.cm-variable-2 {
  color: var(--fg);
}
{{ prefix }} span.cm-variable-3,
{{ prefix }} .cm-s-gruvbox-dark span.cm-type {
  color: var(--yellow);
}
{{ prefix }} span.cm-operator {
  color: var(--operator);
}
{{ prefix }} span.cm-callee {
  color: var(--fg);
}
{{ prefix }} span.cm-def {
  color: var(--definition);
}
{{ prefix }} span.cm-property {
  color: var(--fg);
}
{{ prefix }} span.cm-string {
  color: var(--string);
}
{{ prefix }} span.cm-string-2 {
  color: var(--aqua);
}
{{ prefix }} span.cm-qualifier {
  color: var(--aqua);
}
{{ prefix }} span.cm-attribute {
  color: var(--aqua);
}
{{ prefix }} .CodeMirror-activeline-background {
  background: var(--current-line);
}
{{ prefix }} .CodeMirror-matchingbracket {
  background: var(--gray);
  color: var(--bg0) !important;
}
{{ prefix }} span.cm-builtin {
  color: var(--orange);
}
{{ prefix }} span.cm-tag {
  color: var(--orange);
}
